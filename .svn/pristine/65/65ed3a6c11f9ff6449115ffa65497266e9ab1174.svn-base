<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <EditText android:id="@+id/dialNumberText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:hint="@string/dial_number_hint_string"
        android:inputType="number"/>
    
    <TextView android:id="@+id/emptySpeedDialNumberList" 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/empty_speed_dial_number_list"
        android:layout_below="@id/dialNumberText"/>
    
    <Button android:id="@+id/dialButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/dialNumberText"
        android:text="@string/dial_number_button_string"/>
    
    <ListView
        android:id="@+id/contactList"
        android:layout_width="match_parent"
        android:layout_below="@id/emptySpeedDialNumberList"
        android:layout_height="wrap_content" />

</RelativeLayout> 